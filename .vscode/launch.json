  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Test File",
      "type": "debugpy",
      "request": "launch",
      "python": "/Applications/Blender 3.1.2.app/Contents/MacOS/Blender",
      "pythonArgs": [
        "--factory-startup",
        "-noaudio",
        "-b",
        "--python-exit-code",
        "1",
        "--python",
        "tests/runner.py",
        "--",
      ],
      "program": "tests/runner.py",
      "args": [
        "-k",
        "${fileBasenameNoExtension}"
      ],
      "console": "integratedTerminal",
    },
    {
      "name": "Debug",
      "type": "debugpy",
      "request": "launch",
      "python": "/Applications/Blender 3.1.2.app/Contents/MacOS/Blender",
      "pythonArgs": [
        "--python",
        "tests/debugger.py",
        "--",
      ],
      "program": "tests/debugger.py",
      "console": "integratedTerminal",
      "pathMappings": [{
        "localRoot": "${workspaceFolder}",
        "remoteRoot": "/Users/igelbox/Library/Application Support/Blender/3.1/scripts/addons/"
      }]
    },
  ]
}
